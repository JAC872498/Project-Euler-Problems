"""
"""

def isPrime(num):
	if(num%2==0): return False
	for x in range(3,num/2,2):
		if(num%x==0): return False
	return True

def sectionTotal(length,spot,primes):
	tot=0
	for n in range(length):
		tot+=primes[n+spot]
	return tot

primes=[2]
topLen=0
topNum=0
consecLen=1
spot=0
for n in range(3,1061,2):
	if(isPrime(n)):
		primes.append(n)
while(sectionTotal(consecLen,spot,primes)<100 or spot!=0):
	if(sectionTotal(consecLen,spot,primes)>=100):
		consecLen+=1
		spot=-1
	if(consecLen>topLen and isPrime(sectionTotal(consecLen,spot,primes)) and sectionTotal(consecLen,spot,primes)<100):
		topLen=consecLen
		topNum=sectionTotal(consecLen,spot,primes)
	spot+=1
print("Biggest Prime:",topNum," Primes in it:",topLen)
